{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./node_modules",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@angular-mdc/web/*": ["../../packages/*"],
      "@angular-mdc/web": ["../../packages/public-api.ts"]
    }
  }
}
